import networkx as nx
import matplotlib.pyplot as plt
import random

# ==========================================
# 1. 创建一个最小图对象 (以课件中的二部图为例)
# ==========================================
# 模拟课件中提到的 "Users-to-Movies" 二部图 [cite: 2274]
B = nx.Graph()

# 定义两个节点集合
users = ['User_A', 'User_B', 'User_C', 'User_D']
movies = ['Movie_1', 'Movie_2', 'Movie_3', 'Movie_4', 'Movie_5']

# 添加节点，并标记属于哪个集合（这对二部图很重要）
B.add_nodes_from(users, bipartite=0)
B.add_nodes_from(movies, bipartite=1)

# 添加边 (模拟用户观看/评分了电影)
edges = [
    ('User_A', 'Movie_1'), ('User_A', 'Movie_2'),
    ('User_B', 'Movie_2'), ('User_B', 'Movie_3'), ('User_B', 'Movie_4'),
    ('User_C', 'Movie_1'), ('User_C', 'Movie_5'),
    ('User_D', 'Movie_3')
]
B.add_edges_from(edges)

print(f"Graph Info: {B}")
print(f"Is bipartite? {nx.is_bipartite(B)}")

# ==========================================
# 2. 可视化 (Visualization)
# ==========================================
plt.figure(figsize=(8, 6))

# 分别获取两组节点的位置，形成二部布局
pos = nx.bipartite_layout(B, users)

# 绘制节点和边
nx.draw_networkx_nodes(B, pos, nodelist=users, node_color='skyblue', label='Users', node_size=1000)
nx.draw_networkx_nodes(B, pos, nodelist=movies, node_color='lightgreen', label='Movies', node_size=1000)
nx.draw_networkx_edges(B, pos, width=2, alpha=0.5)
nx.draw_networkx_labels(B, pos, font_size=10)

plt.title("Bipartite Graph: Users vs Movies")
plt.legend()
plt.axis('off')
plt.show()

# ==========================================
# 3. 计算指标 (Metrics)
# ==========================================

# --- Metric A: Node Degree (节点度) ---
# 课件提到度是刻画节点在网络中位置的重要指标 
print("\n--- Node Degrees ---")
degrees = dict(B.degree())
# 按度数从高到低排序，看看哪个用户最活跃，或者哪部电影最热门
sorted_degrees = sorted(degrees.items(), key=lambda item: item[1], reverse=True)
for node, degree in sorted_degrees:
    print(f"{node}: {degree}")

# --- Metric B: Connected Components (连通分量) ---
# 课件中的图示经常包含多个断开的子图
print("\n--- Connected Components ---")
# 为了演示，我们添加一个孤立的节点（没有任何边）
B.add_node('User_Lonely', bipartite=0)

components = list(nx.connected_components(B))
print(f"Number of connected components: {len(components)}")
for i, comp in enumerate(components):
    print(f"Component {i+1}: {comp}")

